<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  <!-- 根标签 -->
  <configuration>
   <typeAliases>
     <typeAlias alias="President" type="com.domain.President"/>
     <typeAlias alias="Emperor" type="com.domain.Emperor"/>
     <typeAlias alias="Philosophy" type="com.domain.Philosophy"/>
     <typeAlias alias="Picture" type="com.domain.Picture"/>
     <typeAlias alias="Quote" type="com.domain.Quote"/>
     <typeAlias alias="User" type="com.domain.User"/>
     <typeAlias alias="Admin" type="com.domain.Admin"/>
      <typeAlias alias="Big_Category" type="com.domain.Big_Category"/>
     <typeAlias alias="Small_Category" type="com.domain.Small_Category"/>
     <typeAlias alias="Goods" type="com.domain.Goods"/>
     <typeAlias alias="Image" type="com.domain.Image"/>
     <typeAlias alias="Shopping_Cart" type="com.domain.Shopping_Cart"/>
     <typeAlias alias="Orders" type="com.domain.Orders"/>
     <typeAlias alias="Comment" type="com.domain.Comment"/>
     <typeAlias alias="Address" type="com.domain.Address"/>
     <typeAlias alias="Province" type="com.domain.Province"/>
     <typeAlias alias="City" type="com.domain.City"/>
   </typeAliases>
  <!-- 配置数据源相关信息 -->
  <environments default="development">
    <environment id="development">
     <transactionManager type="JDBC"/>
     <dataSource type="POOLED">
       <property name="driver" value="com.mysql.jdbc.Driver"/>
       <property name="url" value="jdbc:mysql://localhost:3306/humours?serverTimezone=UTC&amp;useSSL=true"/>
       <property name="username" value="root"/>
       <property name="password" value="123456"/>
     </dataSource>
    </environment>
   </environments> 
   <mappers>
     <mapper resource="com/mybatis/President.xml"></mapper>
     <mapper resource="com/mybatis/Emperor.xml"></mapper>
     <mapper resource="com/mybatis/Philosophy.xml"></mapper>
     <mapper resource="com/mybatis/Picture.xml"></mapper>
     <mapper resource="com/mybatis/Quote.xml"></mapper>
     <mapper resource="com/mybatis/User.xml"></mapper>
     <mapper resource="com/mybatis/Admin.xml"></mapper>
     <mapper resource="com/mybatis/Small_Category.xml"></mapper>
     <mapper resource="com/mybatis/Big_Category.xml"></mapper>
     <mapper resource="com/mybatis/Goods.xml"></mapper>
     <mapper resource="com/mybatis/Image.xml"></mapper>
     <mapper resource="com/mybatis/Shopping_Cart.xml"></mapper>
     <mapper resource="com/mybatis/Orders.xml"></mapper>
     <mapper resource="com/mybatis/Comment.xml"></mapper>
     <mapper resource="com/mybatis/Address.xml"></mapper>
     <mapper resource="com/mybatis/Province.xml"></mapper>
     <mapper resource="com/mybatis/City.xml"></mapper>
   </mappers>
</configuration>