<body>
<article class="page-container">
	<form action="../AdminUpdateServlet" method="post" class="form form-horizontal" id="form-admin-add">
	<c:forEach items="${admins }" var="admin">
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>管理员id：</label>
		<div class="formControls col-xs-4 col-sm-3">
			<input name="id1" hidden="hidden" value="${admin.id }">
			<input type="text" class="input-text" name="id" pattern="[a-zA-Z_]{1,20}[a-zA-Z0-9]{0,20}" id="adminName" disabled="disabled" style="border:none;outline:none"  value="${admin.id }">
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>用户名：</label>
		<div class="formControls col-xs-4 col-sm-3">
			<input type="text" class="input-text"  pattern="[a-zA-Z_]{1,20}[a-zA-Z0-9]{0,20}" id="adminName" name="adminName" disabled="disabled" style="border:none;outline:none" value="${admin.username }">
		</div>
	</div>
	<div class="row cl">
		<label class="form-label col-xs-4 col-sm-3">角色：</label>
		<div class="formControls col-xs-8 col-sm-9"> <span class="select-box" style="width:150px;">
			<select class="select" name="rule" size="1">
				<option value="超级管理员">超级管理员</option>
				<option value="管理员">管理员</option>
			</select>
			</span> 
		</div>
	</div>
	</c:forEach>
	<div class="row cl">
		<div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-3">
			<input class="btn btn-primary radius" type="submit" value="&nbsp;&nbsp;提交&nbsp;&nbsp;">
		</div>
	</div>
	</form>
</article>

